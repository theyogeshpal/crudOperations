@model tasktwodotnet.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Verify OTP | TASKAPP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined">

    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Inter', sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .otp-card {
            background: #ffffff;
            padding: 40px;
            border-radius: 24px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        .icon-badge {
            width: 70px;
            height: 70px;
            background: #e0e7ff;
            color: #4f46e5;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .otp-input {
            letter-spacing: 15px;
            font-size: 2rem;
            font-weight: 700;
            text-align: center;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            background-color: #f8fafc;
            transition: all 0.3s;
        }

            .otp-input:focus {
                border-color: #4f46e5;
                box-shadow: 0 0 0 4px rgba(79, 70, 229, 0.1);
                background-color: #fff;
            }

        .btn-verify {
            background: #4f46e5;
            border: none;
            padding: 12px;
            font-weight: 600;
            border-radius: 12px;
            margin-top: 20px;
            transition: all 0.3s;
        }

            .btn-verify:hover {
                background: #4338ca;
                transform: translateY(-1px);
            }

        .resend-text {
            font-size: 0.85rem;
            margin-top: 20px;
            color: #64748b;
        }
    </style>
</head>
<body>

    <div class="otp-card">
        <div class="icon-badge">
            <i class="material-icons-outlined fs-1">verified_user</i>
        </div>

        <h3 class="fw-bold mb-2">Two-Step Verification</h3>
        <p class="text-muted small mb-4">We sent a verification code to <br><strong>@Model.email</strong></p>

        @if (TempData["otperror"] != null)
        {
            <div class="alert alert-danger py-2 border-0 small mb-4">
                <i class="material-icons-outlined fs-6 align-middle me-1">error_outline</i>
                @TempData["otperror"]
            </div>
        }



        <form asp-action="VerifyOTP" method="post">
            <input type="hidden" name="id" value="@Model.id" />

            <div class="mb-3">
                <label class="form-label d-block small fw-bold text-muted mb-3">ENTER YOUR 6-DIGIT CODE</label>
                <input type="text"
                       class="form-control otp-input"
                       id="otp"
                       name="otp"
                       maxlength="6"
                       placeholder="000000"
                       required
                       autocomplete="one-time-code" />
            </div>

            <button type="submit" class="btn btn-primary w-100 btn-verify shadow-sm">
                Verify & Proceed
            </button>
        </form>

        <div class="resend-text">
            Didn't receive the code?
            <a href="#" class="text-primary text-decoration-none fw-bold">Resend OTP</a>
        </div>

        <div class="mt-4">
            <a asp-action="Login" class="text-muted small text-decoration-none">
                <i class="material-icons-outlined fs-6 align-middle">arrow_back</i> Back to Login
            </a>
        </div>
    </div>

    <script>
        // Automatically focus the input on page load
        window.onload = () => document.getElementById('otp').focus();
    </script>

</body>
</html>