@model tasktwodotnet.Models.User;

@{
    Layout = null; // Or your main layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security | Change Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined">

    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Inter', sans-serif;
        }

        .security-card {
            background: white;
            border-radius: 20px;
            border: none;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            max-width: 450px;
            margin: 80px auto;
            padding: 40px;
        }

        .icon-box {
            width: 60px;
            height: 60px;
            background: #eef2ff;
            color: #4f46e5;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.85rem;
            color: #475569;
        }

        .input-group-text {
            background: transparent;
            border-left: none;
            cursor: pointer;
            color: #94a3b8;
        }

        .form-control {
            border-right: none;
            padding: 12px;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #dee2e6;
        }

        .input-group:focus-within {
            outline: 2px solid #e0e7ff;
            border-radius: 8px;
        }

        .btn-change {
            background: #4f46e5;
            border: none;
            padding: 12px;
            font-weight: 600;
            border-radius: 10px;
            transition: 0.3s;
        }

        .btn-change:hover {
            background: #4338ca;
            transform: translateY(-1px);
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="security-card">
            <div class="text-center">
                <div class="icon-box">
                    <i class="material-icons-outlined fs-2">lock_reset</i>
                </div>
                <h4 class="fw-bold">Change Password</h4>
                <p class="text-muted small">Enter your current and new password below to update your security settings.</p>
            </div>

            <form method="post" asp-action="updatepassword" id="passwordForm" class="mt-4">
                <input type="hidden" name="id" value="@Model.id" />

                <div class="mb-3">
                    <label class="form-label">Current Password</label>
                    <div class="input-group">
                        <input type="password" name="oldpass" id="oldpass" class="form-control" placeholder="••••••••" required />
                        <span class="input-group-text" onclick="togglePass('oldpass', this)">
                            <i class="material-icons-outlined fs-6">visibility</i>
                        </span>
                    </div>
                </div>

                <hr class="my-4 text-light">

                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <div class="input-group">
                        <input type="password" name="newpass" id="newpass" class="form-control" placeholder="Min. 8 characters" required />
                        <span class="input-group-text" onclick="togglePass('newpass', this)">
                            <i class="material-icons-outlined fs-6">visibility</i>
                        </span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Confirm New Password</label>
                    <div class="input-group">
                        <input type="password" name="confirmpass" id="confirmpass" class="form-control" placeholder="Repeat new password" required />
                        <span class="input-group-text" onclick="togglePass('confirmpass', this)">
                            <i class="material-icons-outlined fs-6">visibility</i>
                        </span>
                    </div>
                    <div id="matchError" class="text-danger small mt-2 d-none">Passwords do not match!</div>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-change shadow-sm">
                    Update Security Settings
                </button>

                <div class="text-center mt-3">
                    <a asp-action="Index" class="text-decoration-none small text-muted">Cancel and go back</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Toggle Password Visibility
        function togglePass(id, el) {
            const input = document.getElementById(id);
            const icon = el.querySelector('i');
            if (input.type === "password") {
                input.type = "text";
                icon.textContent = "visibility_off";
            } else {
                input.type = "password";
                icon.textContent = "visibility";
            }
        }

        // Client-side Match Check
        document.getElementById('passwordForm').onsubmit = function(e) {
            const pass = document.getElementById('newpass').value;
            const confirm = document.getElementById('confirmpass').value;
            const errorDiv = document.getElementById('matchError');

            if (pass !== confirm) {
                e.preventDefault();
                errorDiv.classList.remove('d-none');
                return false;
            }
            errorDiv.classList.add('d-none');
        };
    </script>

</body>
</html>