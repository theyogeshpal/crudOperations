@model tasktwodotnet.Models.User;

@{
    Layout = null; // Replace with your Layout if you have one
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile | EMPLOYEE PORTAL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined">

    <style>
        body {
            background-color: #f4f7f9;
            font-family: 'Inter', sans-serif;
            color: #334155;
        }

        .edit-card {
            background: #ffffff;
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
            padding: 40px;
            margin-top: 50px;
        }

        .form-label {
            font-weight: 600;
            font-size: 0.8rem;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
        }

            .form-label i {
                font-size: 1.1rem;
                margin-right: 6px;
                color: #0d6efd;
            }

        .form-control {
            border: 1px solid #e2e8f0;
            padding: 12px 15px;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .form-control:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
            }

        .section-title {
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 30px;
            border-bottom: 2px solid #f1f5f9;
            padding-bottom: 15px;
        }

        .btn-update {
            background: #0d6efd;
            border: none;
            padding: 14px;
            font-weight: 600;
            border-radius: 8px;
            transition: transform 0.2s, background 0.2s;
        }

            .btn-update:hover {
                background: #0b5ed7;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>

    <div class="container pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="edit-card">
                    <div class="section-title d-flex align-items-center">
                        <i class="material-icons-outlined me-2 fs-3 text-primary">manage_accounts</i>
                        <span>Edit User Details</span>
                    </div>

                    <form method="post" asp-action="UpdateDetails">
                        <input type="hidden" asp-for="id" />

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><i class="material-icons-outlined">person</i> Full Name</label>
                                    <input asp-for="name" class="form-control" placeholder="John Doe" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><i class="material-icons-outlined">email</i> Email Address</label>
                                    <input asp-for="email" type="email" class="form-control" placeholder="john@example.com" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><i class="material-icons-outlined">lock</i> Password</label>
                                    <input asp-for="password" type="password" class="form-control" placeholder="••••••••" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><i class="material-icons-outlined">smartphone</i> Mobile</label>
                                    <input asp-for="mobile" type="number" class="form-control" placeholder="9876543210" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><i class="material-icons-outlined">location_city</i> City</label>
                                    <input asp-for="city" type="text" class="form-control" placeholder="e.g. New York" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label"><i class="material-icons-outlined">cake</i> Date of Birth</label>
                                    <input asp-for="dob" type="date" class="form-control" />
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label"><i class="material-icons-outlined">home</i> Home Address</label>
                                    <textarea asp-for="address" class="form-control" rows="3" placeholder="Enter full residential address"></textarea>
                                </div>
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-primary btn-update w-100 shadow-sm">
                                    <i class="material-icons-outlined align-middle me-1">save</i> Save Changes
                                </button>
                                <div class="text-center mt-3">
                                    <a asp-action="Index" class="text-decoration-none text-muted small">Cancel and Return</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>