@model tasktwodotnet.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile | TASKAPP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined">

    <style>
        body {
            background-color: #f8fafc;
            font-family: 'Inter', sans-serif;
            color: #1e293b;
        }

        .profile-container {
            max-width: 600px;
            margin: 60px auto;
        }

        .profile-card {
            background: #ffffff;
            border-radius: 20px;
            border: none;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            overflow: hidden;
        }

        .profile-header {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            padding: 40px 20px;
            text-align: center;
            color: white;
        }

        .avatar-circle {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 2rem;
            font-weight: 700;
            border: 2px solid rgba(255,255,255,0.4);
        }

        .nav-list {
            padding: 20px;
        }

        .nav-item-custom {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            margin-bottom: 10px;
            border-radius: 12px;
            text-decoration: none;
            color: #475569;
            transition: all 0.2s ease;
            border: 1px solid #f1f5f9;
        }

            .nav-item-custom:hover {
                background-color: #f8fafc;
                border-color: #e2e8f0;
                color: #4f46e5;
                transform: translateX(5px);
            }

            .nav-item-custom i {
                margin-right: 15px;
                font-size: 1.5rem;
            }

            .nav-item-custom .text-content {
                flex-grow: 1;
            }

            .nav-item-custom .title {
                display: block;
                font-weight: 600;
                font-size: 1rem;
            }

            .nav-item-custom .desc {
                font-size: 0.8rem;
                color: #94a3b8;
            }

        .logout-btn {
            color: #ef4444 !important;
        }

            .logout-btn:hover {
                background-color: #fef2f2;
                border-color: #fee2e2;
            }
    </style>
</head>
<body>

    <div class="container profile-container">

        @if (TempData["passchangeerror"] != null)
        {
            <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center">
                <i class="material-icons-outlined me-2">error</i>
                @TempData["passchangeerror"]
            </div>
        }

        <div class="profile-card">
            <div class="profile-header">
                <div class="avatar-circle">
                    @Model.name.Substring(0, 1).ToUpper()
                </div>
                <h3 class="mb-0 fw-bold">@Model.name</h3>
                <p class="opacity-75 mb-0">@Model.email</p>
            </div>

            <div class="nav-list">
                <a asp-action="edit" asp-route-id="@Model.id" class="nav-item-custom">
                    <i class="material-icons-outlined text-primary">badge</i>
                    <div class="text-content">
                        <span class="title">Edit Personal Details</span>
                        <span class="desc">Update your name, mobile, and address</span>
                    </div>
                    <i class="material-icons-outlined fs-6 text-light">chevron_right</i>
                </a>

                <a asp-action="changepassword" asp-route-id="@Model.id" class="nav-item-custom">
                    <i class="material-icons-outlined text-warning">lock_open</i>
                    <div class="text-content">
                        <span class="title">Security Settings</span>
                        <span class="desc">Change your password and secure your account</span>
                    </div>
                    <i class="material-icons-outlined fs-6 text-light">chevron_right</i>
                </a>

                <div class="border-top my-3"></div>

                <a asp-action="Logout" class="nav-item-custom logout-btn">
                    <i class="material-icons-outlined">logout</i>
                    <div class="text-content">
                        <span class="title">Logout</span>
                        <span class="desc">Safely sign out of your session</span>
                    </div>
                </a>
            </div>
        </div>

        <p class="text-center mt-4 text-muted small">Account ID: #@Model.id</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>